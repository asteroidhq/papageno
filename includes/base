# Set some system wide variables

## Configure logging
log syslog all;

# Set timebaser for birdseye compatibility
timeformat base         iso long;
timeformat log          iso long;
timeformat protocol     iso long;
timeformat route        iso long;

protocol kernel {
	persist;		# Don't remove routes on bird shutdown
	export all;		# Default is export none
}

protocol device {
	scan time 10;		# Scan interfaces every 10 seconds
}

# action communities


# informational communities
define internal_route = 100;
define rs_route = 101;
define peering_route = 102;
define customer_route = 103;
define transit_route = 104;

# hardcoded into update-peeringdb
define ix_id_offset = 10000;
